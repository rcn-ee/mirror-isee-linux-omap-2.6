#include "am335x-igep-igep0034-lite.dtsi"

/ {
	panel {
		status = "okay";

		panel-info {
			ac-bias           = <255>;
			ac-bias-intrpt    = <0>;
			dma-burst-sz      = <16>;
			bpp               = <16>;
			fdd               = <0x80>;
			sync-edge         = <0>;
			sync-ctrl         = <1>;
			raster-order      = <0>;
			fifo-th           = <0>;
		};

		display-timings {
			native-mode = <&p720>;
			p720: 1280x720p60_mode {
				clock-frequency = <74200000>;
				hactive = <1280>;
				vactive = <720>;
				hfront-porch = <40>;
				hsync-len = <110>;
				hback-porch = <220>;
				vfront-porch = <5>;
				vsync-len = <5>;
				vback-porch = <20>;
			};

			i1080: 1920x1080p30_mode {
				clock-frequency = <74200000>;
				hactive = <1920>;
				vactive = <1080>;
				hfront-porch = <44>;
				hsync-len = <88>;
				hback-porch = <148>;
				vfront-porch = <5>;
				vsync-len = <4>;
				vback-porch = <36>;
			};
		};
	};
};

&sgx {
	status = "okay";
};